<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PropertyManagement.PropertyManagement">

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_pegular"
            android:text="Property Management"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/ivnotification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/bell_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="217dp"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/property_image"
                        android:layout_width="match_parent"
                        android:layout_height="217dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/property" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:visibility="gone"
                        android:layout_marginTop="150dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="Property Management"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="Remarkable monthly property management"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>






            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

<!--
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_pegular"
                    android:text="Revitalize, protect and maintain"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
-->

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_pegular"
                    android:text=""
                    android:textColor="@color/brown5"
                    android:textSize="13dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/poppins_pegular"
                        android:gravity="left"
                        android:text="Our Qualifications"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/rl_show"
                        android:layout_width="15dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:background="@drawable/button_corner_white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_downarro"
                            android:layout_width="15dp"
                            android:layout_height="24dp"
                            android:background="@drawable/down_icon"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_uparro"
                            android:layout_width="15dp"
                            android:layout_height="24dp"
                            android:background="@drawable/up_arro"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="@string/login"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/answer_button_background">

                    <TextView
                        android:id="@+id/tv_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_pegular"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:text="Our team has many years of combined experience
in all phases of landscaping and our customer
focused approach makes us a solid choice for
maintaining the beauty of your property."
                        android:textColor="@color/brown6"
                        android:textSize="14dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/poppins_pegular"
                        android:gravity="left"
                        android:text="Our Capabilities"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/rl_showw"
                        android:layout_width="15dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:background="@drawable/button_corner_white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_downarroo"
                            android:layout_width="15dp"
                            android:layout_height="24dp"
                            android:background="@drawable/down_icon"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_uparroo"
                            android:layout_width="15dp"
                            android:layout_height="24dp"
                            android:background="@drawable/up_arro"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="@string/login"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/answer_button_background">

                    <TextView
                        android:id="@+id/tv_dataa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_pegular"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:text="Our team has many years of combined experience
in all phases of landscaping and our customer
focused approach makes us a solid choice for
maintaining the beauty of your property."
                        android:textColor="@color/brown6"
                        android:textSize="14dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_background"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.7"
                        android:fontFamily="@font/poppins_pegular"
                        android:gravity="left"
                        android:text="Our Commitment"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <RelativeLayout
                        android:id="@+id/rl_showww"
                        android:layout_width="15dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:background="@drawable/button_corner_white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_downarrooo"
                            android:layout_width="15dp"
                            android:layout_height="24dp"
                            android:background="@drawable/down_icon"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_uparrooo"
                            android:layout_width="15dp"
                            android:layout_height="24dp"
                            android:background="@drawable/up_arro"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="@string/login"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/answer_button_background">

                    <TextView
                        android:id="@+id/tv_dataaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_pegular"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:text="Our team has many years of combined experience
in all phases of landscaping and our customer
focused approach makes us a solid choice for
maintaining the beauty of your property."
                        android:textColor="@color/brown6"
                        android:textSize="14dp" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llcostestimate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="Get a Cost Estimates"
                            android:textColor="@color/white"
                            android:textSize="11dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_pegular"
                            android:text="View Cost Estimates"
                            android:textColor="@color/white"
                            android:textSize="11dp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
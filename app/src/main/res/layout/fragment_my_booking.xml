<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyBookingFragment.MyBookingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvongogin"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_pegular"
                android:background="@drawable/button_booking_background"
                android:gravity="center"
                android:text="@string/ongoing"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tvpastbooking"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_corner"
                android:fontFamily="@font/poppins_pegular"
                android:gravity="center"
                android:text="@string/pastbooking"
                android:textColor="@color/green"
                android:textSize="12sp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ongoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/ongoing_booking" />



    </LinearLayout>






</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignupHomeFragment.SignupHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addyourhome"
                android:fontFamily="@font/poppins_pegular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mylawn"
                android:gravity="center"
                android:fontFamily="@font/poppins_pegular"
                android:textColor="@color/white4"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="161dp"
                    android:layout_height="161dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/file_circle" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/file_icon"/>



            </RelativeLayout>


            <TextView
                android:id="@+id/signuphome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="Save"
                android:fontFamily="@font/poppins_pegular"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>